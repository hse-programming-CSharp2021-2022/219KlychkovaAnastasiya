<Window x:Class="Task1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="changeButton"  Grid.Column="1" Content="Change" Click="changeButton_Click"></Button>
        <Grid x:Name="grid"  Grid.Column="0">
            <Rectangle x:Name="gridRectangle" Width="200" Height="100" RadiusX="15" RadiusY="15"></Rectangle>
        </Grid>
        <Canvas x:Name="canvas" Grid.Column="2">
            <Rectangle x:Name="canvasRectangle" Width="200" Height="100" RadiusX="15" RadiusY="15" Canvas.Left="74" Canvas.Top="167"></Rectangle>
        </Canvas>
    </Grid>
</Window>
