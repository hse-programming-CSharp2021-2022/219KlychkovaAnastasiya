<Window x:Class="Task5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <TextBox x:Name="distance" Text="0" Width="100" FontSize="40" Canvas.Left="0" Canvas.Top="0"></TextBox>
        <TextBlock Canvas.Bottom="0" Canvas.Left="{Binding ElementName=distance, Path=Text}" Text ="&quot;Плавающая&quot; надпись" FontSize="40" Background="LemonChiffon"/>
    </Canvas>
</Window>
